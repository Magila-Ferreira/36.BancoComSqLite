<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BancoComSqLite.Inserir"
             Title="Inserir">
    <VerticalStackLayout>
        <Label Text="Nome do paciente"></Label>
        <Entry Text="{Binding Nome}"/>

        <Label Text="Idade do paciente"></Label>
        <Entry Text="{Binding Idade}"/>

        <Label Text="Cor do atendimento"></Label>
        <Entry Text="{Binding Cor}"/>

        <Button Text="Salvar" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>